<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.test4.ui.home.HomeFragment"
        android:label="연락처"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.test4.ui.dashboard.DashboardFragment"
        android:label="갤러리"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
    </fragment>


    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.example.test4.ui.dashboard.ImageDetailFragment"
        android:label="Image Detail"
        tools:layout="@layout/fragment_image_detail" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.test4.ui.notifications.NotificationsFragment"
        android:label="자유주제"
        tools:layout="@layout/fragment_notifications" />
</navigation>